@model IEnumerable<IRControl.Models.IRSample>

@{
    ViewBag.Title = "Send";
}

<div class="page-header">
    <h1>
        IR Control<br><small>Send IR-code</small>
    </h1>
</div>

<table class="table">
    <tr>
        <th>
            IR Codes
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Description, "Send", new { id = item.Id }, new { @class = "btn btn-default", @role = "button" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id}) 
        </td>
    </tr>
}

</table>
